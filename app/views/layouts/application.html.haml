!!!
%html
  %head
    %title= h(yield(:title) || "Untitled")
    = javascript_include_tag 'jquery-1.4.1', 'application', 'farbtastic'
    = javascript_include_tag 'jquery.easing.1.3'
    /= javascript_include_tag 'jquery.slideviewer.1.2'
    = javascript_include_tag 'easySlider'
    = stylesheet_link_tag 'application', 'farbtastic', 'easySlider'
    = yield :head
  %body
    %div.two-columns{:id => "container"}
      - flash.each do |name, msg| 
        = content_tag :div, msg, :id => "flash_#{name}"
      %div.one-column{:id => "header"}
        /= "hokkkkkkkkkkkkkkkkkkkkkkkla"
      - if show_title?
        %h1=h yield :title
      = yield
    %div.one-column{:id => "footer"}
